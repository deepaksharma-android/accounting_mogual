<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#fff</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="noAnimTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlActivated">#fff</item>
    </style>

    <style name="Gotham_Light">
        <item name="fontType">Gotham_Light</item>
    </style>
    <style name="Gotham_Book">
        <item name="fontType">Gotham_Book</item>
    </style>
    <style name="Gotham_Medium">
        <item name="fontType">Gotham_Medium</item>
    </style>

    <style name="Gotham_Bold">
        <item name="fontType">Gotham_Bold</item>
    </style>

    <style name="Gothan_BookItalic">
        <item name="fontType">Gotham_BookItalic</item>
    </style>
    <style name="Gotham_Black">
        <item name="fontType">Gotham_Black</item>
    </style>


</resources>
