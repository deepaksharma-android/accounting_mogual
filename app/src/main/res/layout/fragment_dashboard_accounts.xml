<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e2e2e2"
    tools:context="com.lkintechnology.mBilling.activities.company.FirstPageActivity">
<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">



        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curve_background_shadow"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            style="@style/Gotham_Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.3"
                            android:text="Accounts"
                            android:textColor="@color/black"
                            android:textSize="16dp" />

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/date"
                            style="@style/Gotham_Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="0.7"
                            android:text="Accounts"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorPrimary" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_cash_in_hand"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight=".3"
                                android:src="@drawable/cash_in_hand" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Cash-in-hand"
                                android:textColor="#050505"
                                android:textSize="16sp" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/textview_cash_in_hand"
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="\u20B9 0.0"

                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#20000000" />

                        <LinearLayout
                            android:id="@+id/layout_bank"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight=".3"
                                android:src="@drawable/bank" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Bank A/Cs"
                                android:textColor="#050505"
                                android:textSize="16sp" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/textview_bank"
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="\u20B9 0.0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#20000000" />

                        <LinearLayout
                            android:id="@+id/layout_customer"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"

                                android:layout_weight=".3"
                                android:src="@drawable/customer" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Customers"
                                android:textColor="#050505"
                                android:textSize="16sp" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/textview_customer"
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="\u20B9 0.0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#20000000" />

                        <LinearLayout
                            android:id="@+id/layout_supplier"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight=".3"
                                android:src="@drawable/supplier" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Suppliers"
                                android:textColor="#050505"
                                android:textSize="16sp" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/textview_supplier"
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="\u20B9 0.0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="#20000000" />

                        <LinearLayout
                            android:id="@+id/layout_stock_in_hand"
                            android:layout_width="fill_parent"
                            android:layout_height="50dp"
                            android:visibility="visible"
                            android:layout_marginBottom="5dp"
                            android:background="#fff"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:layout_weight=".3"
                                android:src="@drawable/stock_in_hand" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:text="Stock-in-hand"
                                android:textColor="#050505"
                                android:textSize="16sp" />

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/textview_stock_in_hand"
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="\u20B9 0.0"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transaction_button"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@drawable/curve_backgroung_blue"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="0.32"
                                android:orientation="vertical">



                                <ImageView
                                    android:id="@+id/transaction_icon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="right"
                                    android:src="@drawable/transaction"/>
                            </LinearLayout>


                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.68"
                                android:id="@+id/transactiontext"
                                android:layout_marginLeft="5dp"
                                android:text="START TRANSACTION"
                                android:textColor="#fff"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>









    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B3000000"
        android:id="@+id/top_layout">

        <LinearLayout
            android:id="@+id/cash_in_hand_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:id="@+id/ivInstruction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="0.2"
                android:rotation="270"
                android:layout_gravity="right"
                android:src="@drawable/thin_arrow" />

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Brown_Bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Click for Cash-in-hand"
                android:textColor="#fff"
                android:layout_gravity="bottom|right"
                android:gravity="bottom"
                android:textSize="25sp"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/bank_account_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/cash_in_hand_layout"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Brown_Bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Click for Bank accounts"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|right"
                android:gravity="bottom"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="0.2"
                android:rotation="0"
                android:layout_gravity="right"
                android:scaleType="center"
                android:src="@drawable/anti_thin_arrow" />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/customer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/bank_account_layout"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="0.2"
                android:rotation="270"
                android:layout_gravity="right"
                android:scaleType="center"
                android:src="@drawable/thin_arrow" />

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Brown_Bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Click for customers"
                android:textColor="#fff"
                android:layout_gravity="bottom|right"
                android:gravity="bottom"
                android:textSize="25sp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/supplier_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="-5dp"
            android:layout_below="@id/customer_layout"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Brown_Bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Click for suppliers"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom|left"
                android:gravity="bottom"
                android:textSize="25sp"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="0.2"
                android:rotation="0"
                android:layout_gravity="right"
                android:scaleType="center"
                android:src="@drawable/anti_thin_arrow" />




        </LinearLayout>
        <LinearLayout
            android:id="@+id/stock_in_hand_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@id/supplier_layout"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:weightSum="1">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:layout_weight="0.2"
                android:rotation="270"
                android:layout_gravity="right"
                android:scaleType="center"
                android:src="@drawable/thin_arrow" />

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Brown_Bag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Click for stock-in-hand"
                android:textColor="#fff"
                android:layout_gravity="bottom|right"
                android:gravity="bottom"
                android:textSize="25sp"/>


        </LinearLayout>
    </RelativeLayout>
</FrameLayout>


</android.support.design.widget.CoordinatorLayout>


