<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.company.navigation.reports.outstanding.AmountPaybleActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">


        <com.berylsystems.buzz.utils.BuzzTextView
            style="@style/Gotham_Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Account Group"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/account_group_layout"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_grey_stroke"
            android:gravity="center"
            android:orientation="horizontal">

            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:layout_width="0dp"
                android:id="@+id/account_group_txt"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.9"
                android:background="@android:color/transparent"
                android:hint="Account Group"
                android:textColor="#000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:layout_weight="0.1"
                android:src="@drawable/right_carat" />
        </LinearLayout>


        <com.berylsystems.buzz.utils.BuzzTextView
            style="@style/Gotham_Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Start Date"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_grey_stroke"
            android:gravity="center"
            android:id="@+id/start_date_layout"
            android:orientation="vertical">

            <com.berylsystems.buzz.utils.BuzzTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start_date_txt"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:hint="1 April 2017"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


        <com.berylsystems.buzz.utils.BuzzTextView
            style="@style/Gotham_Medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="End Date"
            android:textColor="#000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/end_date_layout"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_grey_stroke"
            android:gravity="center"
            android:orientation="vertical">

            <com.berylsystems.buzz.utils.BuzzTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:hint="1 April 2017"
                android:id="@+id/end_date_txt"
                android:inputType="number"
                android:textColor="#000"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/submit_layout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/solid_blue"
            android:gravity="center">


            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
