<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <com.lkintechnology.mBilling.utils.BuzzTextView
                    android:id="@+id/item_name"
                    style="@style/Gotham_Medium"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="Invoice Detail"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_invoice_detail"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="Date"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_date"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="Differenciate amount"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_differenciate_item"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="GST"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_gst"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/cgst"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="CGST"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_ccst"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/sgst"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="@style/Gotham_Medium"
                            android:text="SGST"
                            android:layout_marginTop="5dp"
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="12sp"/>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/tv_sgst"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="#000"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:id="@+id/tv_view_igst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s_igst"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"
                        style="@style/Gotham_Medium"
                        />
                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:id="@+id/tv_igst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:id="@+id/tv_view_itc_eligibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/s_itc_eligibility"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"
                        style="@style/Gotham_Medium"
                        />
                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:id="@+id/tv_itceligibility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_2"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:visibility="gone"
                        />

                </LinearLayout>
            </LinearLayout>

