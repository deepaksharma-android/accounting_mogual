<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#e2e2e2"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="157dp"
                        android:background="#fff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="Voucher Series *"
                                android:textColor="#000"
                                android:textSize="15sp" />

                            <LinearLayout
                                android:layout_width="165dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/bg_grey_stroke"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/transaction_spinner"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/main"
                                    android:spinnerMode="dialog">
                                </Spinner>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <com.lkintechnology.mBilling.utils.BuzzTextView
                                    style="@style/Gotham_Medium"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="Voucher  No. *"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/bg_grey_stroke"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <com.lkintechnology.mBilling.utils.BuzzTextView
                                        android:id="@+id/vouchar_no"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:background="@android:color/transparent"
                                        android:hint="enter voucher no"
                                        android:textColor="#000"
                                        android:textSize="16sp" />
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <com.lkintechnology.mBilling.utils.BuzzTextView
                                    style="@style/Gotham_Medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:text="Date *"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:id="@+id/date_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/bg_grey_stroke"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.lkintechnology.mBilling.utils.BuzzTextView
                                        android:id="@+id/date"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.9"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@android:color/transparent"
                                        android:hint="eg.22 Nov 2017"
                                        android:textColor="#000"
                                        android:textSize="16sp"/>

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="16dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/icon_calendar" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="155dp"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:orientation="vertical">

                                <com.lkintechnology.mBilling.utils.BuzzTextView
                                    style="@style/Gotham_Medium"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Type"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:background="@drawable/bg_grey_stroke"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <Spinner
                                        android:id="@+id/transaction_spinner1"
                                        android:layout_width="fill_parent"
                                        android:layout_height="40dp"
                                        android:entries="@array/pdc_regular"
                                        android:spinnerMode="dialog">
                                    </Spinner>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:layout_marginRight="5dp"
                                android:orientation="vertical">

                                <com.lkintechnology.mBilling.utils.BuzzTextView
                                    android:id="@+id/date_pdc_textview"
                                    style="@style/Gotham_Medium"
                                    android:layout_width="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_height="wrap_content"
                                    android:text="PDC Date"
                                    android:textColor="#000"
                                    android:textSize="15sp" />

                                <LinearLayout
                                    android:id="@+id/date_pdc_layout"
                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginLeft="5dp"

                                    android:background="@drawable/bg_grey_stroke"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.lkintechnology.mBilling.utils.BuzzTextView
                                        android:id="@+id/date_pdc"
                                        android:layout_width="0dp"
                                        android:layout_weight="0.9"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:background="@android:color/transparent"
                                        android:hint="eg.22 Nov 2017"
                                        android:textColor="#000"
                                        android:textSize="16sp" />

                                    <ImageView
                                        android:layout_width="0dp"
                                        android:layout_height="16dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/icon_calendar" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:orientation="vertical">

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:text="GST Nature"
                                android:textColor="#000"
                                android:textSize="15sp" />

                                                       <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:orientation="horizontal"
                                android:layout_weight="2"
                                android:background="@drawable/bg_grey_stroke"
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp">
                                <Spinner
                                    android:id="@+id/transaction_spinner2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:entries="@array/gst_nature_payment"
                                    android:spinnerMode="dialog"
                                    android:layout_weight=".40"
                                    >

                                </Spinner>
                                <LinearLayout
                                    android:id="@+id/ll_spinerItem"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="01.50"
                                    android:orientation="horizontal"
                                    android:layout_gravity="center">

                                    <View
                                        android:layout_width="0.5dp"
                                        android:layout_height="33dp"
                                        android:background="@color/black"
                                        android:layout_gravity="center"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30dp"
                                        android:layout_toRightOf="@+id/view"
                                        android:text="Go"
                                        android:textSize="@dimen/dp_16"
                                        style="@style/Gotham_Medium"
                                        android:layout_marginLeft="@dimen/dp_3"
                                        android:gravity="center"
                                        android:background="@drawable/go_button_background"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:layout_marginRight="@dimen/dp_5"/>

                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="150dp"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            android:id="@+id/payment_pay_to"
                            style="@style/Gotham_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Paid To *"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/paid_to_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_grey_stroke"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/paid_to"
                                style="@style/Gotham_Book"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.9"
                                android:background="@android:color/transparent"
                                android:hint="Party Name"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/right_chevron" />
                        </LinearLayout>

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            style="@style/Gotham_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Paid From *"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/paid_from_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_grey_stroke"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                android:id="@+id/paid_from"
                                style="@style/Gotham_Book"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.9"
                                android:background="@android:color/transparent"
                                android:hint="Cash /Bank"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/right_chevron" />
                        </LinearLayout>

                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="80dp"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">


                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            style="@style/Gotham_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Amount *"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/bg_grey_stroke"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.lkintechnology.mBilling.utils.BuzzEditText
                                android:id="@+id/transaction_amount"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@android:color/transparent"
                                android:hint="enter amount"
                                android:inputType="phone"
                                android:textColor="#000"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            style="@style/Gotham_Medium"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Narration"
                            android:textColor="#000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/bg_grey_stroke"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.lkintechnology.mBilling.utils.BuzzEditText
                                android:id="@+id/transaction_narration"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:background="@android:color/transparent"
                                android:hint="Narration"
                                android:textColor="#000"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                        <com.lkintechnology.mBilling.utils.BuzzTextView
                            style="@style/Gotham_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="Attachment"
                            android:textColor="#000"
                            android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/selected_image"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:visibility="gone"/>

                        <LinearLayout
                            android:id="@+id/browse_image"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_grey_stroke"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.lkintechnology.mBilling.utils.BuzzTextView
                                style="@style/Gotham_Book"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="0.9"
                                android:background="@android:color/transparent"
                                android:hint="Attachment"
                                android:textColor="#000"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/icon_attachment"/>
                        </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/submit"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/vendorText"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/solid_blue">

                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/update"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/vendorText"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/solid_blue"
                    android:visibility="gone">

                    <com.lkintechnology.mBilling.utils.BuzzTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
