<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image_blue_gradient"
        android:orientation="vertical">



        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <com.berylsystems.buzz.utils.BuzzTextView
                    style="@style/Gotham_Book"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:text="CHOOSE PACKAGE"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#fff" />

                        <Spinner
                            android:id="@+id/spinner_package"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:overlapAnchor="false"
                            android:popupBackground="#ffffff" />

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="37dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/half_orange_right_gradient"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/down_arrow_white" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="330dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/choose_package_bg_stroke"
                        android:orientation="vertical" />


                    <LinearLayout
                        android:id="@+id/packagebg"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginRight="35dp"
                        android:layout_marginTop="28dp"
                        android:background="@drawable/choose_package_bg_solid"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.7"
                            android:gravity="bottom|center_horizontal">

                            <com.berylsystems.buzz.utils.BuzzTextView
                                style="@style/Gotham_Book"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$"
                                android:textColor="#03A0B6"
                                android:textSize="25sp" />

                            <com.berylsystems.buzz.utils.BuzzTextView
                                android:id="@+id/packageAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:textColor="#03A0B6"
                                android:textSize="80sp" />
                        </LinearLayout>



                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/layout_popular"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="35dp"
                        android:background="#000"
                        android:gravity="center">

                        <com.berylsystems.buzz.utils.BuzzTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="POPULAR"
                            android:textAllCaps="true"
                            android:textColor="#fff"
                            android:textSize="13sp" />
                    </LinearLayout>
                    <ListView
                        android:id="@+id/list_view_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="180dp"
                        android:divider="@null"
                        android:layout_marginBottom="5dp"
                        android:scrollbars="none"
                        android:dividerHeight="0dp" />



                </RelativeLayout>

                <com.berylsystems.buzz.utils.BuzzTextView
                    android:id="@+id/continue_button"
                    style="@style/Gotham_Book"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="50dp"
                    android:background="#fff"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="#000"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

