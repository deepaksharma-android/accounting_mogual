<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="10dp"
    android:id="@+id/coordinatorLayout"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Series"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <com.berylsystems.buzz.utils.BuzzEditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/series"
                    android:layout_marginLeft="5dp"
                    android:text="Main"
                    android:background="@android:color/transparent"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Date"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <com.berylsystems.buzz.utils.BuzzTextView
                    android:id="@+id/date"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:hint="eg.1 April 2017"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Vch. No."
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <com.berylsystems.buzz.utils.BuzzEditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/vch_number"
                    android:background="@android:color/transparent"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>


            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sale Type"
                android:textColor="#000"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="horizontal">

                <com.berylsystems.buzz.utils.BuzzTextView
                    style="@style/Gotham_Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:id="@+id/sale_type"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/right_carat" />
            </LinearLayout>
            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Store"
                android:textColor="#000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="horizontal">
                <com.berylsystems.buzz.utils.BuzzTextView
                    style="@style/Gotham_Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:id="@+id/store"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/right_carat" />
            </LinearLayout>
            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Party Name"
                android:textColor="#000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="horizontal">
                <com.berylsystems.buzz.utils.BuzzTextView
                    style="@style/Gotham_Book"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.9"
                    android:background="@android:color/transparent"
                    android:hint=""
                    android:id="@+id/party_name"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="10dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/right_carat" />
            </LinearLayout>
            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mobile Number"
                android:textColor="#000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="vertical">
                <com.berylsystems.buzz.utils.BuzzEditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:inputType="number"
                    android:maxLength="10"
                    android:id="@+id/mobile_number"
                    android:textColor="#000"
                    android:textSize="16sp" />
            </LinearLayout>
            <com.berylsystems.buzz.utils.BuzzTextView
                style="@style/Gotham_Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Narration"
                android:textColor="#000"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_grey_stroke"
                android:gravity="center"
                android:orientation="vertical">

                <com.berylsystems.buzz.utils.BuzzEditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/narration"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/transparent"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_grey_stroke"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Cash"
                    android:id="@+id/cash"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Credit"
                    android:id="@+id/credit"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/vendorText"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/solid_blue">

                <com.berylsystems.buzz.utils.BuzzTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</android.support.design.widget.CoordinatorLayout>
