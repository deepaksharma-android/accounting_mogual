<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:orientation="vertical">

        <com.lkintechnology.mBilling.utils.BuzzTextView
            style="@style/Gotham_Medium"
            android:id="@+id/voucher_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="voucher_type"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1">

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="fsdfg"
                android:textColor="#050505"
                android:textSize="12sp" />

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:id="@+id/amount"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="dfgfdgd"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:textColor="#050505"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:weightSum="1">

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:text="sdfdf"
                android:textColor="#050505"
                android:textSize="12sp" />

            <com.lkintechnology.mBilling.utils.BuzzTextView
                style="@style/Gotham_Book"
                android:id="@+id/voucher_no"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="fdgsdfg"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:textColor="#050505"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">

            <LinearLayout
                android:id="@+id/icon_delete"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.05">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_delete1"
                    android:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:layout_weight="0.8">


            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_eye"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:layout_weight="0.05">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="1dp"
                    android:src="@drawable/icon_eye"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/icon_printing"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:layout_weight="0.1">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_printing"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icon_share"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.05">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_share"
                    android:layout_marginRight="10dp"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>