<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:onClick="add"
        android:layout_above="@+id/calculation_layout"
        android:id="@+id/floating_button"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:src="@drawable/icon_add" />

    <LinearLayout
        android:id="@+id/party_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <com.lkintechnology.mBilling.utils.BuzzTextView
            android:id="@+id/party_name"
            style="@style/Gotham_Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:gravity="start"
            android:hint="Party Name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/change_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center">

            <com.lkintechnology.mBilling.utils.BuzzTextView
                android:id="@+id/change"
                style="@style/Gotham_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="CHANGE"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height=".1dp"
        android:layout_below="@+id/party_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary" />

    <com.lkintechnology.mBilling.utils.BuzzTextView
        android:id="@+id/your_item"
        style="@style/Gotham_Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="Your Item"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height=".1dp"
        android:layout_below="@+id/your_item"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary" />

<LinearLayout
