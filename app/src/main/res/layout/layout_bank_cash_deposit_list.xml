<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_grey_stroke_3dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.3"
            android:textSize="15sp"
            android:text="Deposit To"
            android:textColor="#000"
            style="@style/Gotham_Book"
            />
        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:id="@+id/bank_edit_text1"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_gravity="center">
        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Deposit By"
            android:textStyle="bold"
            android:textColor="#000"
            style="@style/Gotham_Book"
            android:layout_height="wrap_content" />

        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:id="@+id/bank_edit_text2"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">
        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#000"
            style="@style/Gotham_Book"
            android:text="Date"
            android:layout_height="wrap_content" />
        <com.berylsystems.buzz.utils.BuzzTextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:id="@+id/bank_edit_text3"
            android:textSize="15sp"
            android:textColor="#000"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/edit1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.15"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_edit"
                android:visibility="visible" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginBottom="4dp"
            android:layout_weight="0.15"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_delete"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>